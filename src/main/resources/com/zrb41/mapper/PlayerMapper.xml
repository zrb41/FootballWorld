<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zrb41.mapper.PlayerMapper">

    <select id="queryById" resultType="player">
        select* from tb_player where id=#{id}
    </select>

    <select id="queryAll" resultType="player">
        select* from tb_player;
    </select>

    <delete id="deleteById">
        delete from tb_player where id=#{id}
    </delete>

    <!--动态sql，批量插入-->
    <insert id="insertBatch">
        insert into tb_player (name,age,country_name,club_name,position,ability,price) values
        <foreach collection="list" item="player" separator=",">
            (#{player.name},#{player.age},#{player.countryName},#{player.clubName},
            #{player.position},#{player.ability},#{player.price})
        </foreach>
    </insert>

    <!--动态sql，批量删除-->
    <delete id="deleteBatch">
        delete from tb_player where id in
        <foreach collection="ids" open="(" separator="," close=")" item="id">
            #{id}
        </foreach>
    </delete>

    <!--动态sql，更新数据-->
    <update id="update">
        update tb_player
        <set>
            <if test="name!=null">
                name=#{name},
            </if>

            <if test="age!=null">
                name=#{age},
            </if>
            <if test="countryName!=null">
                country_name=#{countryName},
            </if>
            <if test="clubName!=null">
                club_name=#{clubName},
            </if>
            <if test="name!=null">
                name=#{name},
            </if>
            <if test="position!=null">
                position=#{position},
            </if>
            <if test="ability!=null">
                ability=#{ability},
            </if>
            <if test="price!=null">
                price=#{price},
            </if>
        </set>
        where id=#{id}
    </update>
</mapper>